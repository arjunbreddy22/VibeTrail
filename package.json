{
  "name": "vibetrail",
  "displayName": "VibeTrail",
  "description": "Track your coding journey with automatic workspace snapshots",
  "version": "0.0.1",
  "publisher": "ArjunReddy22",
  "repository": {
    "type": "git",
    "url": "https://github.com/arjunbreddy22/VibeTrail.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vibetrail.saveSnapshot",
    "onCommand:vibetrail.showTimeline"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibetrail.saveSnapshot",
        "title": "Save Snapshot",
        "category": "VibeTrail"
      },
      {
        "command": "vibetrail.showTimeline",
        "title": "Show Timeline",
        "category": "VibeTrail"
      },
      {
        "command": "vibetrail.repairRepository",
        "title": "Repair Repository",
        "category": "VibeTrail"
      }
    ],
    "configuration": {
      "title": "VibeTrail",
      "properties": {
        "vibetrail.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for AI-powered features",
          "markdownDescription": "Your OpenAI API key. Get one at [OpenAI Platform](https://platform.openai.com/api-keys)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "simple-git": "^3.19.1",
    "openai": "^4.28.0"
  }
} 