{
  "name": "vibetrail",
  "displayName": "VibeTrail: Versional Control For Vibe Coding",
  "description": "Effortlessly track your Vibe Coding journey with snapshots, restore points, and AI-powered change analysisâ€”all without cluttering your main Git history. Works on your IDE of choice (Cursor, Windsurf, VSCode, Codeium)",
  "version": "0.1.10",
  "publisher": "ArjunReddy22",
  "repository": {
    "type": "git",
    "url": "https://github.com/arjunbreddy22/VibeTrail.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "icon": "vibetrail-logo.png",
  "contributes": {
    "commands": [
      {
        "command": "vibetrail.saveSnapshot",
        "title": "Save Snapshot",
        "category": "VibeTrail"
      },
      {
        "command": "vibetrail.showTimeline",
        "title": "Show Timeline",
        "category": "VibeTrail"
      },
      {
        "command": "vibetrail.repairRepository",
        "title": "Repair Repository",
        "category": "VibeTrail"
      }
    ],
    "configuration": {
      "title": "VibeTrail",
      "properties": {
        "vibetrail.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for AI-powered features",
          "markdownDescription": "Your OpenAI API key. Get one at [OpenAI Platform](https://platform.openai.com/api-keys)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "webpack --mode production",
    "webpack-dev": "webpack --mode development",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.4.4"
  },
  "dependencies": {
    "simple-git": "^3.19.1",
    "openai": "^4.28.0"
  }
} 