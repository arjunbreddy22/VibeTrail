{
  "name": "vibetrail",
  "displayName": "VibeTrail",
  "description": "Track your coding journey with automatic workspace snapshots",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vibetrail.saveSnapshot",
    "onCommand:vibetrail.showTimeline"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibetrail.saveSnapshot",
        "title": "Save Snapshot",
        "category": "VibeTrail"
      },
      {
        "command": "vibetrail.showTimeline",
        "title": "Show Timeline",
        "category": "VibeTrail"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "simple-git": "^3.19.1"
  }
} 